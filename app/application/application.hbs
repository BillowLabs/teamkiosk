{{!-- ------------------------------------------------------------------------------------------------------------------
 APPLICATION VIEW
 This template provides the application chrome for the rest of the ember application.  If we end up adding
 navigation elements, logos, etc. to the entire site, this is where they should go.
------------------------------------------------------------------------------------------------------------------- --}}

<div id="application">
	<h1 class="invisible">Team Kiosk</h1>
	<nav class="header">
		<h1>Main Navigation</h1>
		<ul>
			{{#link-to 'dashboard' tagName='li'}}
				{{#link-to 'dashboard'}}
					<i class="fa fa-home"></i> Dashboard
				{{/link-to}}
			{{/link-to}}

			{{#link-to 'builds' tagName='li'}}
				{{#link-to 'builds' current-when="builds build"}}
					<i class="fa fa-code"></i> Builds
				{{/link-to}}
			{{/link-to}}
		</ul>
	</nav>

	<input id="app-nav-trigger"     type="checkbox"       class="invisible" />
	<label id="app-nav-label"       for="app-nav-trigger" class="nav-label"></label>
	<label id="app-content-overlay" for="app-nav-trigger" class="app-content-overlay"></label>

	<main id="app-content" class="app-content">
		<article class="page">
			{{outlet}}
		</article>
	</main>
</div>

